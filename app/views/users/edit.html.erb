<div class="container">
<div class="row">
<div class="d-grid gap-2 col-8 mx-auto">

<div class="mt-3">
<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

</div>

<%= form_with model: @user do |f| %>

<div class="mb-3">
<h4>Name</h4>
  <%= f.text_field :name %>
</div>

<div class="mb-3">
<h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>
</div>

<div class="mb-2">
<h4>Introduction</h4>
  <%= f.text_area :introduction %>
</div>

  <%= f.submit 'Update User' , class: "btn btn-secondary" %>

<% end %>

</div>
</div>
</div>
