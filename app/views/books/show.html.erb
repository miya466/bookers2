<div class="container px-5 px-sm-0 mt-3">
<div class="row">

<div class="col-md-3">
   <%= render 'list', book: @newbook , user: @user  %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <td><%= link_to user_path(@user) do %>
      <%= image_tag @user.get_profile_image(80,80) %><br />
      <%= @user.name %>
      <% end %></td>
      <td><%= link_to @book.title , book_path(@user.id) %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %><%= link_to "Edit", edit_book_path(@book) , class: "btn btn-sm btn-success" %><% end %></td>
      <td><% if @book.user == current_user %><%= link_to "Destroy", book_path(@book), method: :delete , class: "btn btn-sm btn-danger"  %><% end %></td>
    </tr>
  </tbody>
</table>
</div>
</div>

</div>
</div>